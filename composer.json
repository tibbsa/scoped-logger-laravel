{
    "name": "tibbs/scoped-logger-laravel",
    "description": "Fine-grained logging level management for Laravel",
    "keywords": [
        "Anthony Tibbs",
        "laravel",
        "scoped-logger-laravel"
    ],
    "homepage": "https://github.com/tibbsa/scoped-logger-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthony Tibbs",
            "email": "anthony@tibbs.ca",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^12.11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tibbs\\ScopedLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tibbs\\ScopedLogger\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest --exclude-group=performance",
        "test-coverage": "vendor/bin/pest --coverage --exclude-group=performance",
        "test-performance": "vendor/bin/pest --group=performance",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tibbs\\ScopedLogger\\ScopedLoggerServiceProvider"
            ],
            "aliases": {
                "ScopedLogger": "Tibbs\\ScopedLogger\\Facades\\ScopedLogger"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
